= simple_form_for @business_associate, html: {'data-validate' => 'form', :id => 'form-business-associates', :class => 'business-associate-form'}, :url => url, :method => method do |f|
  .row
    .col-md-15-3.group-label.text-right
      span.field-label
        | Primary Administrator:
    .col-md-15-3
      = f.input :admin_f_name, label: 'First Name', required: true
    .col-md-15-3
      = f.input :admin_m_name, label: 'Middle Name', required: true
    .col-md-15-3
      = f.input :admin_l_name, label: 'Last Name', required: true
  .row
    .col-md-15-3.col-md-15-offset-3
      = f.input :admin_email, label: 'Email', required: true
    .col-md-15-3
      = f.input :admin_phone, label: 'Phone', required: true
    .col-md-15-3
      = f.input :name, label: 'Name', required: true
  .row
    .col-md-15-3.group-label.text-right
      span.field-label
        | Business Information:
    .col-md-15-3
      = f.input :legal_name, label: 'Legal Name', required: true
    .col-md-15-3
      = f.input :pan, label: 'Legal Business Name (PAN Card)', required: true, input_html: {minlength: 10, maxlength: 10}
    .col-md-15-3
      = f.input :tan, label: 'Legal Business Name (TAN Card)', required: true, input_html: {minlength: 10, maxlength: 10}
  .row
    .col-md-15-3.col-md-15-offset-3
      = f.input :business_type, label: 'Business Type', required: true
    .col-md-15-3
      = f.input :service_tax_no, label: 'Service Tax No.', required: true, input_html: {minlength: 15, maxlength: 15}
  .row
    .col-md-15-6.col-md-15-offset-3
      = f.input :hq_address, label: 'HQ Address', required: true





  p[style="font-size:18px; font-weight:600; margin-left:10px"]
    | Billing Attributes
  .row
    -if current_user.admin?
      .col-md-4.no-margin
        label.site_labels for="ba_operator"
          | Operator
        select.form-control#ba_operator
          option [value="0"]
            | Choose Operator      

    -if current_user.operator?
      .col-md-4.no-margin[style="display:none"]
        label.site_labels for="ba_operator_id"
          | Operator
        input#ba_operator_id[class="form-control" type="text" name="ba_operator_id" value=current_user.entity.logistics_company.id]

  div#serviceContainer
    div.services#services[style="display:none"]
      .row.vehicle-div#service_1
        .col-md-4.margin-top
          label.site_labels for="serviceType"
            | Service Type
          select.form-control.serviceType#serviceType_1
