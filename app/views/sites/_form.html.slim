        | Admin email id
      input#admin_email_id[class="form-control" type="text" name="admin_email_id" value=""]


  p[style="font-size:18px; font-weight:600; margin-left:10px"]
    | Billing Attributes
  .row
    -if current_user.employer? || current_user.admin?
      .col-md-4.no-margin
        label.site_labels for="operator"
          | Operator
        select.form-control#operator
          option [value="0"]
            | Choose Operator      

    -if current_user.operator?
      .col-md-4.no-margin[style="display:none"]
        label.site_labels for="operator_id"
          | Operator
        input#operator_id[class="form-control" type="text" name="operator_id" value=current_user.entity.logistics_company.id]
